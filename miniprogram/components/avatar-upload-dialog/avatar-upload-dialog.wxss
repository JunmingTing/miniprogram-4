/* 头像上传弹窗样式 */
.avatar-upload-dialog {
  width: 600rpx;
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  padding: 0;
}

.dialog-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.dialog-content {
  padding: 40rpx;
}

.current-avatar-section {
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 20rpx;
}

.current-avatar-container {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.current-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.new-avatar-section {
  padding: 40rpx;
}

.selected-image-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background-color: #f8f9ff;
  border-radius: 16rpx;
  border: 2rpx solid #e6e8ff;
}

.selected-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.image-actions {
  display: flex;
  gap: 20rpx;
}

.select-buttons {
  display: flex;
  gap: 30rpx;
  justify-content: center;
}

.select-btn {
  flex: 1;
  max-width: 200rpx;
}

.current-avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #e0e0e0;
}

.upload-options {
  margin-bottom: 30rpx;
}

.option-buttons {
  display: flex;
  gap: 30rpx;
  justify-content: center;
}

.option-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 40rpx;
  background-color: #f8f9ff;
  border: 2rpx solid #e6e8ff;
  border-radius: 16rpx;
  transition: all 0.2s;
  min-width: 180rpx;
}

.option-btn:active {
  background-color: #f0f2ff;
  border-color: #4F46E5;
  transform: scale(0.98);
}

.option-text {
  font-size: 26rpx;
  color: #4F46E5;
  margin-top: 16rpx;
  font-weight: 500;
}

.upload-progress {
  padding: 20rpx 40rpx;
  background-color: #f8f9ff;
  border-top: 1rpx solid #f0f0f0;
}

.progress-text {
  font-size: 28rpx;
  color: #4F46E5;
  font-weight: 500;
  text-align: center;
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
}

.dialog-actions {
  padding: 20rpx 40rpx 40rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  width: 100%;
}

/* 图片预览样式 */
.image-preview {
  margin-bottom: 30rpx;
}

.preview-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background-color: #f8f9ff;
  border-radius: 16rpx;
  border: 2rpx solid #e6e8ff;
}

.preview-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.preview-actions {
  display: flex;
  gap: 20rpx;
}
