/* 资讯详情页样式 */
.news-detail-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 资讯内容 */
.news-content {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.news-header {
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.news-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  display: block;
  margin-bottom: 20rpx;
}

.news-time {
  font-size: 24rpx;
  color: #999;
}

.news-image-section {
  padding: 30rpx;
}

.news-image {
  border-radius: 12rpx;
}

.news-text {
  padding: 0 30rpx 30rpx;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: block;
}

.news-actions {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: background-color 0.2s;
}

.action-item:active {
  background-color: #f0f0f0;
}

.action-text {
  font-size: 20rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 评论区 */
.comments-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.comments-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.comments-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.comments-list {
  padding: 0 30rpx;
}

.comment-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-avatar {
  margin-right: 20rpx;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.comment-author {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.comment-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  display: block;
  margin-bottom: 15rpx;
}

.comment-actions {
  display: flex;
  align-items: center;
}

.comment-action {
  display: flex;
  align-items: center;
  padding: 10rpx;
  border-radius: 8rpx;
  transition: background-color 0.2s;
}

.comment-action:active {
  background-color: #f0f0f0;
}

.comment-action-text {
  font-size: 20rpx;
  color: #666;
  margin-left: 8rpx;
}

/* 底部评论输入框 */
.comment-input-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  padding: 20rpx 30rpx;
  z-index: 100;
}

.comment-input-container {
  display: flex;
  align-items: flex-end;
  gap: 20rpx;
}

.comment-textarea {
  flex: 1;
  min-height: 60rpx;
  max-height: 120rpx;
}

.comment-submit-btn {
  flex-shrink: 0;
  height: 60rpx;
  padding: 0 30rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx;
  color: #999;
}

.loading-text {
  font-size: 24rpx;
  margin-top: 20rpx;
}

/* 举报选项 */
.report-options {
  padding: 20rpx 0;
}

.report-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.report-option:last-child {
  border-bottom: none;
}

.report-option-text {
  font-size: 28rpx;
  color: #333;
}
