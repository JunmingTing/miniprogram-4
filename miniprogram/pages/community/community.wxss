/* 社区页面样式 */
.community-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 固定发布按钮 */
.fixed-publish-btn {
  position: fixed;
  bottom: 100rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #0052D9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 217, 0.3);
  z-index: 100;
  transition: all 0.2s;
}

.fixed-publish-btn:active {
  transform: scale(0.95);
}

/* 帖子列表 */
.posts-list {
  padding: 20rpx;
}

.post-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}


/* 帖子图片 */
.post-images {
  position: relative;
  padding: 20rpx;
}

.post-swiper {
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.image-container {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #f0f0f0;
}

.post-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  transition: transform 0.3s ease;
  background-color: #f0f0f0;
}

.post-image:active {
  transform: scale(0.98);
}

.image-indicator {
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.indicator-text {
  font-size: 20rpx;
}

/* 滑动提示 */
.swipe-hint {
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 8rpx;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  animation: fadeInOut 3s ease-in-out;
}

.hint-text {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.9);
}

@keyframes fadeInOut {
  0% { opacity: 0; }
  20% { opacity: 1; }
  80% { opacity: 1; }
  100% { opacity: 0; }
}

/* 操作按钮 */
.post-actions {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: background-color 0.2s;
}

.action-item:active {
  background-color: #f0f0f0;
}

.action-text {
  font-size: 20rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 标签区域 */
.post-tags {
  padding: 0 30rpx 30rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  align-items: center;
  position: relative;
}

.tag-item {
  margin-bottom: 16rpx;
}

.post-tag {
  transition: all 0.2s;
}

.post-tag:active {
  transform: scale(0.95);
}

/* 添加标签按钮 */
.add-tag-btn {
  position: absolute;
  bottom: 10rpx;
  right: 30rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  border: 1rpx dashed #ccc;
  border-radius: 16rpx;
  background-color: #fafafa;
  transition: all 0.2s;
  z-index: 10;
}

.add-tag-btn:active {
  background-color: #f0f0f0;
  transform: scale(0.95);
}

.add-tag-text {
  font-size: 18rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  color: #999;
}

.load-text {
  font-size: 24rpx;
  margin-top: 20rpx;
}


/* 举报选项 */
.report-options {
  padding: 20rpx 0;
}

.report-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.report-option:last-child {
  border-bottom: none;
}

.report-option-text {
  font-size: 28rpx;
  color: #333;
}
