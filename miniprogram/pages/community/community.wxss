/* 社区页面样式 */
.community-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 固定发布按钮 */
.fixed-publish-btn {
  position: fixed;
  top: 100rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #0052D9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 217, 0.3);
  z-index: 100;
  transition: all 0.2s;
}

.fixed-publish-btn:active {
  transform: scale(0.95);
}

/* 帖子列表 */
.posts-list {
  padding: 20rpx;
}

.post-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.author-avatar-container {
  margin-right: 20rpx;
  position: relative;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.author-avatar-placeholder {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.author-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.author-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

/* 帖子图片 */
.post-images {
  position: relative;
}

.post-swiper {
  width: 100%;
}

.post-image {
  width: 100%;
  height: 400rpx;
}

.image-indicator {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.indicator-text {
  font-size: 20rpx;
}

/* 操作按钮 */
.post-actions {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: background-color 0.2s;
}

.action-item:active {
  background-color: #f0f0f0;
}

.action-text {
  font-size: 20rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 标签区域 */
.post-tags {
  padding: 0 30rpx 30rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  margin-bottom: 16rpx;
}

.post-tag {
  transition: all 0.2s;
}

.post-tag:active {
  transform: scale(0.95);
}

/* 加载更多 */
.load-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  color: #999;
}

.load-text {
  font-size: 24rpx;
  margin-top: 20rpx;
}

/* 标签输入对话框 */
.tag-input-container {
  padding: 20rpx 0;
}

.tag-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #fff;
}

/* 举报选项 */
.report-options {
  padding: 20rpx 0;
}

.report-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.report-option:last-child {
  border-bottom: none;
}

.report-option-text {
  font-size: 28rpx;
  color: #333;
}
