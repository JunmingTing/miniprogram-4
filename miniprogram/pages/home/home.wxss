/* 首页样式 */
.home-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索区域 */
.search-section {
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

/* 置顶资讯 */
.pinned-news {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.pinned-label {
  padding: 20rpx 20rpx 10rpx;
}

/* 资讯列表 */
.news-list {
  background-color: #fff;
}

.news-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.news-item:active {
  background-color: #f8f8f8;
}

.news-content {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.news-image {
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.news-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.news-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.news-time {
  font-size: 24rpx;
  color: #999;
}

.news-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 100rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  border-radius: 8rpx;
  transition: background-color 0.2s;
}

.action-item:active {
  background-color: #f0f0f0;
}

.action-text {
  font-size: 20rpx;
  color: #666;
  margin-top: 4rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  color: #999;
}

.load-text {
  font-size: 24rpx;
  margin-top: 20rpx;
}
