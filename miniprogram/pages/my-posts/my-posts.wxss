/* 我的帖子管理页面样式 */
.my-posts-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.posts-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.post-item {
  position: relative;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s;
}

.post-item:active {
  transform: scale(0.98);
}

.post-image {
  width: 100%;
  height: 200rpx;
}

.post-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  padding: 20rpx 16rpx 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.image-count {
  color: #fff;
  font-size: 20rpx;
  font-weight: 500;
}

.reject-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx;
  color: #999;
}

.loading-text {
  font-size: 24rpx;
  margin-top: 20rpx;
}
