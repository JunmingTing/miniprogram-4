/* 帖子详情页样式 */
.post-detail-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.author-avatar {
  margin-right: 20rpx;
}

.author-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.author-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

/* 帖子图片 */
.post-images {
  position: relative;
  background-color: #fff;
}

.post-swiper {
  width: 100%;
}

.post-image {
  width: 100%;
  height: 600rpx;
}

.image-indicator {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.indicator-text {
  font-size: 20rpx;
}

/* 操作按钮 */
.post-actions {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: background-color 0.2s;
}

.action-item:active {
  background-color: #f0f0f0;
}

.action-text {
  font-size: 20rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 标签区域 */
.post-tags {
  padding: 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  margin-bottom: 16rpx;
}

.post-tag {
  transition: all 0.2s;
}

.post-tag:active {
  transform: scale(0.95);
}

/* 驳回理由 */
.reject-reason {
  background-color: #fff2f0;
  border: 1rpx solid #ffccc7;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx;
}

.reject-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.reject-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #ff4d4f;
  margin-left: 10rpx;
}

.reject-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: block;
}

.republish-btn {
  width: 200rpx;
}
